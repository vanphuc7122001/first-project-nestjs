model ProductCategory {
    id         String   @id @default(uuid()) @db.VarChar(36)
    productId  String   @map("product_id") @db.VarChar(36)
    categoryId String   @map("category_id") @db.VarChar(36)
    products   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
    categories Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

    @@unique([productId, categoryId])
    @@map("product_categories")
}
